#:import random random
<SnakePart>
    size:(40,40)
    canvas.before:
        Color:
            rgb:random.random(),random.random(),random.random()
        Rectangle:
            pos:self.pos
            size:self.size
GameScreen:
    canvas.before:
        Color:
            rgb:1,1,1
        Rectangle:
            pos:self.pos
            size:self.size
    Widget:
        size:(40,40)
        pos:(120,120)
        id:food
        canvas.before:
            Color:
                rgb:random.random(),random.random(),random.random()
            RoundedRectangle:
                pos:self.pos
                size:self.size
                radius:[50]

    Label:
        pos:(20, root.height-self.height)
        text:"Score: 0"
        font_size:25
        id:score_label
        color:0,0,0,1
        bold:1
    GridLayout:
        padding:20
        pos:(root.width-self.width,root.height-self.height)
        spacing:20
        size:(150,60)
        cols:2
        Label:
            text:"Bazzazi"
            color:0,0,0,1
            bold:1
            font_size:20
        AsyncImage:
            source:'https://avatars.githubusercontent.com/u/81759694?v=4'
            size_hint:None,None
            size:(50,50)


################## END ##################
