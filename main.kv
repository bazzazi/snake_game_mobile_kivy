#:import random random
#:import webbrowser webbrowser
<SnakePart>
    size:(40,40)
    canvas.before:
        Color:
            rgb:random.random(),random.random(),random.random()
        Rectangle:
            pos:self.pos
            size:self.size
GameScreen:
    canvas.before:
        Color:
            rgb:1,1,1
        Rectangle:
            pos:self.pos
            size:self.size
    Widget:
        size:(40,40)
        pos:(120,120)
        id:food
        canvas.before:
            Color:
                rgb:random.random(),random.random(),random.random()
            RoundedRectangle:
                pos:self.pos
                size:self.size
                radius:[50]

    Label:
        pos:(20, root.height-self.height)
        text:"Score: 0"
        font_size:25
        id:score_label
        color:0,0,0,1
        bold:1
    BoxLayout:
        orientation:"horizontal"
        pos:(root.width-self.width,root.height-self.height-10)
        spacing:20
        padding:10
        size:250,70
        Label:
            text:''
        Button:
            background_color:0,0,0,0
            background_normal:""
            canvas.before:
                Color:
                    rgb:200/255,0,0
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius:[2]
            size_hint:None,None
            size:'120dp','35dp'
            text:"SUBSCRIBE"
            bold:1
            color:1,1,1,1
            on_release:webbrowser.open("https://www.youtube.com/channel/UCeLKoNs3c72Vc-OG3uNQxGw?sub_confirmation=1")
        AsyncImage:
            source:'https://avatars.githubusercontent.com/u/81759694?v=4'
            size_hint:None,None
            size:('40dp','40dp')
################## END ##################
